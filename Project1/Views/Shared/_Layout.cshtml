<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>BUSINEMATCH - @ViewBag.Title</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          rel="stylesheet">
    <link href="../../Content/carousel.css" rel="stylesheet">
    

    @Styles.Render("~/Content/")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/ckeditor")
</head>

<body>
    <!--Navigation Bar -->
    <div>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            @Html.ActionLink("BUSINEMATCH", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Companies Listing", "Index", "Companies", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                </ul>
                <hr style="border-color:darkgray" />
                <!--This is the authentication form-->
                @Html.Partial("_LoginPartial")
            </div>
        </nav>
    </div>
    <div class="container-fluid body-content">
        <!-- RenderBody is a placeholder where all the view-specific pages you create show up, "wrapped" in the layout page. -->
        <br/>
        @RenderBody()
        
        <div class="container-fluid" id="footer">
            <hr />
            <p class="float-md-left">&copy; 2017-2018 BUSINEMATCH, Inc. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
            <p class="float-md-right"><a href="#">Back to top</a></p>
        </div>
    </div>
    
            
        
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!--BootStrap-->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="../../Scripts/umd/holder.min.js"></script>

</body>
</html>
