@model Project1.Models.Company

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Companies", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Company</h4>
        <hr />
        
        <div class="form-group">
            @if (ViewBag.Status == "warning")
            {
                <div class="alert alert-warning">@ViewBag.Message</div>
            }
            @if (ViewBag.Status == "info")
            {
                <div class="alert alert-info">@ViewBag.Message</div>
            }
            @if (ViewBag.Status == "success")
            {
                <div class="alert alert-success">@ViewBag.Message</div>
            }
        </div>
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CompId)

        <div class="form-group">
            @Html.LabelFor(model => model.CompImg, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (ViewBag.CompImg == null)
                {
                    <input type="file" id="image" name="image" />
                }
                @if (ViewBag.CompImg != null)
                {
                    <img src='@Url.Action( "Show", "Companies", new { id = Model.CompId } )' height="200" width="200" />
                    <input type="file" id="image" name="image" />
                }

                @Html.ValidationMessageFor(model => model.CompImg, "", new { @class = "text-danger" })
            </div>
        </div>

